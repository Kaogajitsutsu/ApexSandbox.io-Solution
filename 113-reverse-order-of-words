public String reverseWordsInASentence(String sentence){
    //your flawless code here
    String reverseSen = sentence.reverse();
    String reverseFirstWord = '';
    String reverseSecondWord = '';

    if (reverseSen == '') {
        reverseSen = null;
    } else if (reverseSen == null) {
        reverseSecondWord = null;
        reverseSen = null;
        }

    while (reverseSen != null) {
        reverseFirstWord = reverseSen.substringBefore(' ');
        reverseFirstWord = reverseFirstWord.reverse() + ' ';
        reverseSen = reverseSen.substringAfter(' ');
        reverseSecondWord += reverseFirstWord;

        if (reverseSen.containsNone(' ') == true) {
            reverseFirstWord = reverseSen.substringBefore(' ');
            reverseFirstWord = reverseFirstWord.reverse();
            reverseSecondWord += reverseFirstWord;
            reverseSen = null;
        }
    }

    return reverseSecondWord;
}