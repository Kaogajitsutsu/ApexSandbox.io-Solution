public String reverseWordsInASentence(String sentence){
    //your flawless code here
    String reverseSen = sentence.reverse();
    String reverseWords = '';
    String reverseWords2 = '';

    reverseWords = reverseSen.substringBefore(' ');
    reverseWords = reverseWords.reverse() + ' ';
    reverseWords2 = reverseSen.substringAfter(' ');
    reverseWords2 = reverseSen.substringBefore(' ');
    reverseWords2 = reverseWords2.reverse();

    return reverseWords + reverseWords2;
}