public String changeTimeFormat(String strTime) {
    //code here
    String strHour = strTime.substringBefore(':');
    Integer hour = Integer.valueOf(strHour);
    String ampm = 'AM';

    If (hour >= 12) {
        ampm = 'PM';
        If (hour > 12) {
            hour = hour - 12;
        }
    }

    return String.valueOf(hour) + ':' + strTime.substringAfter(':');
}