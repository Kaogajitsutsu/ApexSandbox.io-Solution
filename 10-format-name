public String formatName(String firstName, String lastName) {
    //code here
    if (firstName == '' && lastName == '') {
        return '';
    } else if (firstName == '' || lastName == '') {
        if (firstName == null) {
            firstName = '';
        } else if (lastName == null) {
            lastName = '';
        }
        return firstName + lastName;
    } else {
        return lastName + ', ' + firstName;
    }
}